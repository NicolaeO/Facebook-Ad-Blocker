{
    "name" : "Facebook Ad Blocker",
    "version": "1.0",
    "description": "this simple js code will remove Shitty ads from faebook",
    "manifest_version": 2,
    "author": "Nicolae Orlov",

    "content_scripts": [
        {
            "matches":[
                "https://*.facebook.com/*"
            ],
            "run_at": "document_idle",
            "all_frames": true,
            "js": [
                "background.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "fbadblock.png",
        "default_title": "It's great without ads"
    },
    "permissions": [
        "activeTab"
    ]
}
